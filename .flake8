[flake8]
max-line-length = 88
max-complexity = 10
exclude = 
    .venv,
    __pycache__,
    *.pyc,
    .git,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .coverage,
    .pytest_cache,
    .mypy_cache,
    .DS_Store,
    checkpoints,
    ray_results,
    ray_logs,
    tensorboard_logs,
    .streamlit
ignore = 
    E203,
    W503,
    E501
per-file-ignores =
    __init__.py:F401  # ignore unused imports in __init__.py files
